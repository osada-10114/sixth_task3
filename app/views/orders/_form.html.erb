<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container form">    
    <div class="row">
      <h2>氏名（漢字）</h2>
      <%= form.text_field :name, id: :consumer_name, placeholder: "例）田中　太郎", required: true %>
    </div>
    <div class="row">
      <h2>氏名（カタカナ）</h2>
      <%= form.text_field :name_katakana, id: :consumer_name_katakana, placeholder: "例）タナカ　タロウ", required: true %>
    </div>
    <div class="row">
      <h2>電話番号</h2>
      <%= form.number_field :phone_number, id: :consumer_phone_number, placeholder: "ハイフンなしで半角数字で入力してください　例）09012345678", required: true %>
    </div>
    <div class="row">
      <h2>メールアドレス</h2>
      <%= form.email_field :email, id: :consumer_email, placeholder: "半角英数字　例）tanaka.tarou@email.com", required: true %><br>
    </div>
    <div class="row">
      <h2>住所</h2>
      <%= form.text_field :address, id: :consumer_address, placeholder: "例）東京都渋谷区 円山町20-1 新大宗円山ビル11F", required: true %>
    </div>
    
    <%= form.submit "注文する", class: "button" %>
  </div>
<% end %>
