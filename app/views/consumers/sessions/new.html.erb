<div class="page-header">
  <h1>ログイン</h1>
</div>
<div class="container">
  <div class="form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2>ニックネーム</h2>
      <%= f.text_field :nickname, placeholder: "半角英数字 例)taroutanaka" %>
      <h2>パスワード</h2>
      <%= f.password_field :password, placeholder: "8文字以上、半角英数字で入力してください" %>
      <%= f.submit "ログイン", class: "button" %>
    <% end %>
  </div>
</div>