<div class="page-header">
  <h1>会員登録</h1>
</div>
<div class="container">
  <div class="form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h2>ニックネーム</h2>
      <%= f.text_field :nickname, placeholder: "半角英数字 例)taroutanaka" %>
      <h2>メールアドレス</h2>
      <%= f.email_field :email, placeholder: "例）tanaka.tarou@email.com" %>
      <h2>パスワード</h2>
      <%= f.password_field :password, placeholder: "8文字以上、半角英数字で入力してください" %>
      <h2>パスワード（確認）</h2>
      <%= f.password_field :password_confirmation, placeholder: "8文字以上、半角英数字で入力してください" %>
      <%= f.submit "会員登録", class: "button" %>
    <% end %>
  </div>
</div>