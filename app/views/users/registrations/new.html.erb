<div class="page-header">
  <h1>Sign up</h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <p>ニックネーム</p>
  <%= f.text_field :nickname, placeholder: "半角英数字 例)taroutanaka" %>

  <p>メールアドレス</p>
  <%= f.email_field :email, placeholder: "tanaka.tarou@email.com" %>

  <p>パスワード</p>
  <%= f.password_field :password, placeholder: "8文字以上、半角英数字で入力してください" %>

  <p>パスワード(再確認)</p>
  <%= f.password_field :password_confirmation, placeholder: "8文字以上、半角英数字で入力してください" %>

  <%= f.submit "Sign up" %>

<% end %>